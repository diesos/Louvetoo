extends layout.pug

block content
  .container
    .row.justify-content-center
      .col-md-8
        if error
          .alert.alert-warning= error
        .card
          .card-header Register
          .card-body
            form.form-horizontal(method='post' action='/register')
              .mb-3
                label.form-label.control-label(for='prenom') Prénom
                input#prenom.form-control(type='text' name='prenom' required)
              .mb-3
                label.form-label.control-label(for='nom') Nom
                input#nom.form-control(type='text' name='nom' required)
              .mb-3
                label.form-label.control-label(for='email') Email
                input#email.form-control(type='email' name='email' required)
              .mb-3
                label.form-label.control-label(for='password') Mot de passe
                input#password.form-control(type='password' name='password' required)
              .mb-3
                label.form-label.control-label(for='telephone') Téléphone
                input#telephone.form-control(type='tel' name='telephone' required)
              .mb-3
                label.form-label.control-label(for='role') Rôle
                select#role.form-control(name='role' required)
                  option(value='parent') Parent
                  option(value='grand parent') Grand parent
                  option(value='staff') Staff
              .mb-3.py-3
                button.btn.btn-primary.login-button(type='submit') Register
                a(href='/login' class='ps-2') Login
